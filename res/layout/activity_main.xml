<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Text File"
        android:id="@+id/importFile"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Anagram"
        android:id="@+id/runIt"
        android:layout_below="@+id/importFile"
        android:layout_alignLeft="@+id/importFile"
        android:layout_alignStart="@+id/importFile"
        android:layout_marginTop="55dp"
        android:onClick="runFile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export Anagram File"
        android:id="@+id/exportFile"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/runIt"
        android:layout_centerHorizontal="true"
        android:onClick="exportFile" />

</RelativeLayout>
